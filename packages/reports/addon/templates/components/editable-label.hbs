{{#if isEditingValue}}
  {{input
    classNames="editable-label__input"
    value=_localValue
    size=_inputSize
    maxlength=150
    enter=(action "blurLabelInput")
    focus-out=(action "editComplete")
  }}
{{else}}
  <span
    class="clickable editable-label__value"
    {{action (pipe (action "resetValue") (toggle "isEditingValue" this) (action "highlightLabelInput"))}}
    role="button"
  >
    {{value}}
    <span>
      {{navi-icon "pencil" class="editable-label__icon"}}
      {{ember-tooltip text="Rename"}}
    </span>
  </span>
{{/if}}
