<span class="navi-table-select__header">
  Table
</span>
{{#power-select
  classNames="navi-table-select__dropdown"
  dropdownClass="navi-table-select__dropdown-list"
  options=options
  selected=selected
  searchEnabled=searchEnabled
  tagName=tagName
  onchange=onChange
  as | item |
}}
