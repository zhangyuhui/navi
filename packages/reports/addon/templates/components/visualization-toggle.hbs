{{#each validVisualizations as |visualization|}}
  <span
    class="visualization-toggle__option {{if (eq report.visualization.type visualization.name) "visualization-toggle__option--is-active"}}"
    role="button"
    onclick={{action onVisualizationTypeUpdate visualization.name}}
  >
    {{navi-icon visualization.icon class="visualization-toggle__icon"}}
    {{visualization.niceName}}
  </span>
{{/each}}
