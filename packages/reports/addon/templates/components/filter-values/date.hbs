{{#dropdown-date-picker
  date=(moment date)
  onUpdate=(action "setDate")
}}
  <div class="filter-values--date-dimension-select__trigger">  
    {{#if date}}
      {{moment-format date "MMM DD, YYYY"}}
    {{else}}
      <span class="date__placeholder">Select date</span>
    {{/if}}
  </div>
{{/dropdown-date-picker}}