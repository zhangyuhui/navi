{{#navi-info-message classNames="navi-report-new__info-message"}}
  <span class="navi-report-new__report-icons">
    {{navi-icon "line-chart"}}
    {{navi-icon "bar-chart"}}
    {{navi-icon "table"}}
  </span>
  {{#with (model-for (parent-route)) as | report |}}
    <p>
      Select some dimensions and metrics, then click
      <a class="navi-link clickable"
        onclick={{pipe
        (route-action "validate" report)
        (route-action "runReport" report)
      }}>
        Run
      </a>
    </p>
  {{/with}}
{{/navi-info-message}}
